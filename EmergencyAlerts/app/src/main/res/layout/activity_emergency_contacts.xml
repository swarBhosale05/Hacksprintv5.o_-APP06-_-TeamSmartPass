<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/tvEmergencyContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="National Emergency : 112"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Disaster Management : 108"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Ambulance : 102"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Air Ambulance : 9540161344"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autoLink="phone"
        android:paddingTop="8dp"
        android:text="Disaster Management : 1126701728"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="NDRF Helpline : 1124363260, 9711077372"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Fire : 101"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Police : 100 "
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"/>


</LinearLayout>